FROM node:20-slim

# Install OpenSSL, curl, and other required libraries for Prisma and healthchecks
RUN apt-get update && apt-get install -y \
    openssl \
    ca-certificates \
    curl \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm ci

# Copy backend source code
COPY . ./

# Ensure Prisma schema is available
COPY prisma ./prisma/

# Build backend
RUN npm run build

# Generate Prisma client
RUN npx prisma generate

EXPOSE 4000

# Health check (use dynamic PORT from environment, default to 4000)
# Increased start-period to 30s to allow for database connection and server startup
HEALTHCHECK --interval=30s --timeout=10s --start-period=30s --retries=3 \
  CMD curl -f http://localhost:${PORT:-4000}/health || exit 1

CMD ["npm", "start"]
